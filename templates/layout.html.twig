<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>{% block title %}{% endblock %}</title>
    {% block stylesheets %}
    <!-- Bootstrap Core CSS -->
    <link href="{{ asset('build/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">

    <!-- Fonts -->
    <link href="{{ asset('build/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('build/css/animate.css') }}" rel="stylesheet" />
    <!-- Squad theme CSS -->
    <link href="{{ asset('build/css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('build/css/default.css') }}" rel="stylesheet">

    {% endblock %}

</head>

<body id="page-top" data-spy="scroll" data-target=".navbar-custom">
<!-- Preloader -->
<div id="preloader">
    <div id="load"></div>
</div>

<nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header page-scroll">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand" href="{{ path('sitecom_homepage') }} ">
                <h1>SNOWTRICKS</h1>
            </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="{{ path('sitecom_homepage') }}">Accueil</a></li>
                <li><a href="#about">Figures</a></li>
              {%if not app.user  %}


                  <li><a href="{{ path('security_login') }}">Se Connecter</a></li>

                  {% else %}

                      <li><a href="{{ path('security_logout') }}">Se Deconnecter</a></li>



              {% endif %}
                <li><a href="#contact">Contact</a></li>

            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>
{% block body %}
{% endblock %}
{% block javascripts %}
<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-12">

                <p>&copy;2019SnowTricks.Tous droits Réservés.</p>

            </div>
        </div>
    </div>
</footer>


<!-- Core JavaScript Files -->
<script src="{{ asset('build/js/jquery.min.js') }}"></script>
<script src="{{ asset('build/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('build/js/jquery.easing.min.js') }}"></script>
<script src="{{ asset('build/js/jquery.scrollTo.js') }}"></script>
<script src="{{ asset('build/js/wow.min.js') }}"></script>
<!-- Custom Theme JavaScript -->
<script src="{{ asset('build/js/custom.js') }}"></script>
<script src="{{ asset('build/contactform/contactform.js') }}"></script>
{% endblock %}
</body>

</html>
