{% extends 'layout.html.twig' %}



{% block title %}SnowTricks|Nos figures{% endblock %}

        {% block body %}




            <!-- Section: about -->
            <section id="about" class="home-section text-center">
                <div class="heading-about">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8 col-lg-offset-2">
                                <div class="wow bounceInDown" data-wow-delay="0.4s">
                                    <div class="section-heading">
                                        <h2>NOS FIGURES</h2>
                                        <i class="fa fa-2x fa-angle-down"></i>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">

                    <div class="row">
                        <div class="col-lg-2 col-lg-offset-5">
                            <hr class="marginbot-50">
                        </div>
                    </div>
                    <div class="row">
                        {% set i = 0 %}
                        {% for listfigure in listfigures %}

                        <div class="col-md-3">
                            <div class="wow bounceInUp" data-wow-delay="0.2s">
                                <div class="team boxed-grey">
                                    <div class="inner">

                                        <div class="avatar"><img src="{{ asset('build/img/team/1.jpg')|imagine_filter('thumb') }}" alt="" class="img-responsive img-circle" /></div>

                                        <h5>{{ listfigure.name }}</h5>
                                        <a href class="btn btn-warning btn-xsm">  <i class="fa fa-2x fa-edit"></i></a>
                                        <a href class="btn btn-danger btn-xsm">  <i class="fa fa-2x fa-trash"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                            {% set i= i + 1 %}

                        {% endfor %}








                    </div>

                    <div class="navigation">
                        {{ knp_pagination_render(listfigures) }}
                    </div>



                </div>


            </section>
            <!-- /Section: about -->



        {% endblock %}

